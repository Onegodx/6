<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Количество точек и запятых" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите строку:" FontSize="16" Margin="0 0 0 5"/>
            <TextBox x:Name="textBox" MinHeight="60" FontSize="14" TextWrapping="Wrap" Margin="0 0 0 10"/>
            <Button Content="Посчитать" FontSize="14" Padding="5" Margin="0 0 0 10" Click="Button_Click"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Количество точек: " FontSize="16" Margin="0 0 5 0"/>
                <TextBlock x:Name="dotsCountText" FontSize="16"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Количество запятых: " FontSize="16" Margin="0 10 5 0"/>
                <TextBlock x:Name="commasCountText" FontSize="16"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
